[Unit]
Description=PLGames Booster UP - PLG Relay Server
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/plg-relay
Restart=always
RestartSec=5
LimitNOFILE=65536

EnvironmentFile=/etc/plg-relay/env
# Required:
#   RELAY_API_KEY=<secret>
# Optional (with defaults):
#   RELAY_PORT=443
#   RELAY_API_PORT=8443
#   RELAY_METRICS_PORT=9090
#   RELAY_MAX_SESSIONS=1000
#   RELAY_SESSION_TIMEOUT=300
#   RUST_LOG=info

[Install]
WantedBy=multi-user.target
