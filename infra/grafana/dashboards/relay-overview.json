{
  "uid": "plg-relay-overview",
  "title": "Relay Overview",
  "tags": ["plgames", "relay"],
  "timezone": "browser",
  "editable": true,
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Active Sessions",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "plg_active_sessions",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Packets / sec",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(plg_packets_received_total[5m])",
          "legendFormat": "received",
          "refId": "A"
        },
        {
          "expr": "rate(plg_packets_forwarded_total[5m])",
          "legendFormat": "forwarded",
          "refId": "B"
        },
        {
          "expr": "rate(plg_packets_dropped_total[5m])",
          "legendFormat": "dropped",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "pps",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "dropped" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          }
        ]
      }
    },
    {
      "id": 3,
      "title": "Bytes Forwarded Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(plg_bytes_forwarded_total[5m])",
          "legendFormat": "bytes/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "fillOpacity": 10 }
        }
      }
    },
    {
      "id": 4,
      "title": "Invalid Sessions Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(plg_invalid_sessions_total[5m])",
          "legendFormat": "invalid/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "fillOpacity": 10 }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "invalid/sec" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }
            ]
          }
        ]
      }
    },
    {
      "id": 5,
      "title": "Packet Drop Ratio",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 5 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(plg_packets_dropped_total[5m]) / (rate(plg_packets_received_total[5m]) > 0) * 100",
          "legendFormat": "drop %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
