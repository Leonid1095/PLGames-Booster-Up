{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "PLGames Booster",
  "version": "0.1.0",
  "identifier": "com.plgames.booster",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PLGames Booster",
        "width": 400,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "center": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "tooltip": "PLGames Booster"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "RWQE+rgZJn8cQh2KNm76xmZyLy9pV8Ww0TNWuYoZQ75Wbt2JwtBW9eqW",
      "endpoints": [
        "https://github.com/Leonid1095/PLGames-Booster-Up/releases/latest/download/latest.json"
      ]
    }
  }
}
